<div class="container">
  <nav class="link">
    <%= link_to "ホーム", 'posts_index_path' %>
    <%= link_to "新規", 'new_post_path' %>
  </nav>
    <%= image_tag("bird.png", height: 42, width: 42, class: "style_image") %>
  <h1>Twitter Clone </h1>
  <table>
    <tr>
      <th>All Messages</th>
    </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
    </tr>
    <tr class="tr_link">
      <td><%= link_to "編集", edit_post_path(post.id), data: {confirm: '本当に編集していいですか？'} %></td>
      <td><%= link_to "削除", post_path(post.id),method: :delete, data: {confirm: '本当に削除していいですか？'} %></td>
    </tr>
  <% end %>
  </table>
</div>
