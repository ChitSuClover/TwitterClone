<div class="container">
  <nav class="navi">
    <%= link_to "ホーム", posts_path,class:"post_link" %>
    <%= link_to "新規", new_post_path, class:"post_link" %>
  </nav>
    <%= image_tag("bird.png", height: 42, width: 42, class: "style_image") %>
  <h1>Twitter Clone </h1>
  <table>
    <tr>
      <th colspan="2">All Messages</th>
    </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td class="table_data"><%= link_to "編集", edit_post_path(post.id), data: {confirm: '本当に編集していいですか？'}, class:"post_link" %>
          <%= link_to "削除", post_path(post.id),method: :delete, data: {confirm: '本当に削除していいですか？'}, class:"post_link"%></td>
    </tr>
  <% end %>
  </table>
  <footer class="footer">
    <p>Copyright © 2021 Twitter Clone</p>
  </footer>
</div>
