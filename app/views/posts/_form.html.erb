<%= stylesheet_link_tag "style.css" %>
<%= form_with(model: @post, local: true, url: choose_action) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation", class="error" >
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <nav class="navi">
      <%= link_to "ホーム", posts_path,class:"post_link" %>
    </nav>
      <%= image_tag("bird.png", height: 42, width: 42, class: "style_image") %>
    <h1>Twitter Clone </h1>
    <div class="post_content">
      <%= form.text_field :content, class:"label" %><br>
      <%= form.submit "Tweet" , class: 'post_link'%>
    </div>
<% end %>
  <footer class="footer">
    <p>Copyright © 2021 Twitter Clone</p>
  </footer>
</div>
