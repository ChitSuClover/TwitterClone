<%= stylesheet_link_tag "style.css" %>
<h3>以下の内容で送信しますか？</h3>
<div class="container">
<%= form_with(model: @post, url: posts_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
    <p>Message　➡︎ <%= @post.content %></p>
  <div class="form_div">
    <%= form.submit "送信する" , class:"confirm_link" %>
    <%= form.submit "戻る" , name: 'back', class:"confirm_link"%>
  </div>
<% end %>
</div>
